<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp" >


        <Button
            android:id="@+id/guidelines"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.40"
            android:text="Guidelines"
            android:textSize="15dp" />

        <Button
            android:id="@+id/firstaid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.40"
            android:text="First Aid"
            android:textSize="15dp" />
        
         <Button
            android:id="@+id/redcross"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.40"
            android:text="Red Cross"
            android:textSize="15dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- Put image and number here -->
            
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/earthquake" />
      
            <TextView
                android:id="@+id/eq1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BEFORE"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

            <TextView
                android:id="@+id/beq1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Bolt and brace water heaters and gas appliances to wall studs."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            
            <TextView
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="2dp" />


            <TextView
                android:id="@+id/beq2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Hang heavy items, such as pictures and mirrors away from beds, couches and anywhere people sleep or sit"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            
            <TextView
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            
            <TextView
                android:id="@+id/beq3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Learn how to shut off the gas valves in your home and keep a wrench handy for that purpose"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />
			
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            
            <TextView
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            
            <TextView
                android:id="@+id/beq4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DURING- IF INDOORS"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            
            <TextView
        android:id="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            
            
            <TextView
                android:id="@+id/beq5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. DROP, cover and hold on. Move as little as possible and watch for falling objects"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />
            
             <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
             
             <TextView
        android:id="@+id/line8"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            
            
            <TextView
                android:id="@+id/beq6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. If you are in bed, stay there curl up and hold on protecting your head with a pillow"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />
            

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            
            <TextView
        android:id="@+id/line9"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            
            
            <TextView
                android:id="@+id/beq7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Stay away from windows to avoid being injured by shattered glass"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />
            
              <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
              
              <TextView
        android:id="@+id/line10"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            
            
            <TextView
                android:id="@+id/beq7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Be aware that fire alarms and sprinkler systems frequently go off in building during an earthquake even if there is no fire"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />
            
             <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            
             <TextView
        android:id="@+id/line11"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            
            <TextView
                android:id="@+id/beq8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DURING -IF OUTSIDE"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            
            
            <TextView
        android:id="@+id/line12"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            
            <TextView
                android:id="@+id/beq9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Find a clear spot and drop to the ground"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />
            
              <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            
              <TextView
        android:id="@+id/line13"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            
            <TextView
                android:id="@+id/beq10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-	Stay there until the shaking stops, away from buildings, power lines, trees and street lights"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            
            <TextView
        android:id="@+id/line14"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            <TextView
                android:id="@+id/beq11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DURING- IF YOUR ARE IN VEHICLE"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            
            
            <TextView
        android:id="@+id/line15"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            
            <TextView
                android:id="@+id/beq12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Pull over to a clear location and stop"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />
            
                  
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            
            <TextView
        android:id="@+id/line16"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            
            
            <TextView
                android:id="@+id/beq13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Stay inside with your seatbelt fastened until the shaking stops"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />
            
                    
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            
             <TextView
        android:id="@+id/line17"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            
            
            <TextView
                android:id="@+id/beq14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. If a power line falls on your vehicle, do not get out. Wait for assistance"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />
            
             <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
             
              <TextView
        android:id="@+id/line18"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            
            
            <TextView
                android:id="@+id/beq15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. If you are in a mountainous are or near unstable slopes or cliffs, be alert for failing rocks and other debris."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />
            
                 
             <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
             
              <TextView
        android:id="@+id/line19"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            
            
            <TextView
                android:id="@+id/beq16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AFTER"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />
            
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            
             <TextView
        android:id="@+id/line20"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            
            
            <TextView
                android:id="@+id/beq17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-	If away from home, return only when authorities say it is safe to do so"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />
            
             <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
             
              <TextView
        android:id="@+id/line21"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            
            
            <TextView
                android:id="@+id/beq18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stay away from damages areas in and around your home"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />
            
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            
            
            <TextView
                android:id="@+id/beq22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Look for and extinguish small fires"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />
            
             <TextView
        android:id="@+id/line22"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            
            
            <TextView
                android:id="@+id/beq20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use extreme caution and examine walls floors doors to check for damage"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />
            
            
 <TextView
        android:id="@+id/line23"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>

