<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp" >


        <Button
            android:id="@+id/guidelines"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.40"
            android:text="Guidelines"
            android:textSize="10dp" />

        <Button
            android:id="@+id/firstaid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.40"
            android:text="First Aid"
            android:textSize="10dp" />
        
         <Button
            android:id="@+id/redcross"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.40"
            android:text="Red Cross"
            android:textSize="10dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- Put image and number here -->
            
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/diabetic" />


            <TextView
                android:id="@+id/eq1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Give them something containing sugar such as sugar tablets, orange juice, sugar-containing candy or a non-diet drink."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
            
            
    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            

            <TextView
                android:id="@+id/beq2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reassure the person. Call 117 if in doubt or they donâ€™t improve, have trouble breathing or lose consciousness."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="normal" />
            
            
    <TextView
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
            

            
        </LinearLayout>
    </ScrollView>

</LinearLayout>

